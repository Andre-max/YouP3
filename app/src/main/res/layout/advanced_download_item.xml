<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/kano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/_music"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/music_bitrate_selection"
            app:srcCompat="@drawable/ic_music" />

    </android.support.v7.widget.LinearLayoutCompat>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/_64"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_64_k" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/_96"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_96_kbps" />

        <Button
            android:id="@+id/_128"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_128_kbps" />

        <Button
            android:id="@+id/_160"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_160_k" />

        <Button
            android:id="@+id/_192"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_192_kbps" />

    </LinearLayout>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/kano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/_video"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/music_bitrate_selection"
            app:srcCompat="@drawable/ic_music_video" />

    </android.support.v7.widget.LinearLayoutCompat>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/_144p"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_144_p" />

        <Button
            android:id="@+id/_240p"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_240_p" />

        <Button
            android:id="@+id/_360p"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_320P_text" />

        <Button
            android:id="@+id/_480p"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_480_p" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/_720p"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_720_p" />

        <Button
            android:id="@+id/_1080p"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_1080_p" />

        <Button
            android:id="@+id/_1440p"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_1440_p" />

        <Button
            android:id="@+id/_2160p"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_2160_p_4k" />
    </LinearLayout>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/kano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/video_silent"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/music_bitrate_selection"
            android:enabled="false"
            app:srcCompat="@drawable/ic_video" />

    </android.support.v7.widget.LinearLayoutCompat>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/_144p_silent"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_144_p" />

        <Button
            android:id="@+id/_240p_silent"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_240_p" />

        <Button
            android:id="@+id/_360p_silent"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_320P_text" />

        <Button
            android:id="@+id/_480p_silent"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_480_p" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/_720p_silent"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_720_p" />

        <Button
            android:id="@+id/_1080p_silent"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_1080_p" />

        <Button
            android:id="@+id/_1440p_silent"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_1440_p" />

        <Button
            android:id="@+id/_2160p_silent"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/_2160_p_4k" />
    </LinearLayout>

</LinearLayout>